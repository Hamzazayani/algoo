 PROCEDURE procedure_sum(var sum:INTEGER)
VAR
   s, x1,x2,y1,y2:INTEGER
BEGIN
x1*x2+y1*y2=sum
IF (sum=0) THEN
    write( "the two vectors are orthogonal")
ELSE
    write ("the two vectors are not orthogonal")
END_IF
END



FUNCTION function_sum(x1,x2,y1,y2) : return_INTEGER
VAR
     x1,x2,y1,y2:INTEGER
BEGIN
sum =x1*x2+y1*y2
  
    RETURN sum ;
END
s=function_sum 
IF (s=0) THEN
    write( "the two vectors are orthogonal")
ELSE
  write ("the two vectors are not orthogonal")
END_IF